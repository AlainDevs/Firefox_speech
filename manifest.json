{
  "manifest_version": 2,
  "name": "Google TTS: Chirp 3 & Gemini",
  "version": "2.0.0",
  "description": "Read selected text aloud using Google Chirp 3 HD or Gemini-TTS voices with Shift+X hotkey. Advanced style control with prompts.",
  
  "applications": {
    "gecko": {
      "id": "chirp3-hd-tts@firefox-speech.extension"
    }
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "https://texttospeech.googleapis.com/*"
  ],
  
  "background": {
    "scripts": ["config.js", "background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    "config.js"
  ],
  
  "browser_action": {
    "default_title": "Google TTS: Chirp 3 & Gemini",
    "default_popup": "popup.html"
  }
}